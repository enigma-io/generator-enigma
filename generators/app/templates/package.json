{
  "name": "<%= appName %>",
  "description": "<%= appDescription %>",
  "private": true,
  "version": "0.0.1",
  "author": {
    "name": "<%= authorName %>",
    "email": "<%= authorEmail %>"
  },
  "dependencies": {
    "react": "^0.14.2",
    "react-dom": "^0.14.2"
  },
  "devDependencies": {
    "babel-eslint": "^4.0.0",
    "babel-jest": "^6.0.1",
    "babel-preset-es2015": "^6.1.18",
    "babel-preset-react": "^6.1.18",
    "babel-preset-stage-2": "^6.1.18",
    "babelify": "^7.0.0",
    "browserify": "^12.0.0",
    "budo": "^7.0.0",
    "eslint-plugin-react": "^2.5.0",
    "eslintify": "*",
    "jest": "^0.1.40",
    "jest-cli": "^0.8.0",
    "lodash": "^3.9.3",
    "pleeease": "^4.0.2",
    "pleeease-cli": "git+https://github.com/yaycmyk/pleeease-cli.git#fix-ignore",
    "uglify-js": "^2.4.23",
    "watchify": "^3.2.3"
  },
  "babel": {
    "presets": [
      "es2015",
      "react",
      "stage-2"
    ]
  },
  "jest": {
    "scriptPreprocessor": "./jest.preprocessor.js",
    "testRunner": "./node_modules/jest-cli/src/testRunners/jasmine/jasmine2.js",
    "unmockedModulePathPatterns": [
      "."
    ],
    "modulePathIgnorePatterns": [
      "./node_modules/"
    ],
    "preprocessorIgnorePatterns": [
      "./node_modules/"
    ]
  },
  "scripts": {
    "build_js": "browserify index.js -t babelify --debug > dist/bundle.js",
    "build_css": "pleeease-compile",
    "build": "npm run build_css && npm run build_js",
    "release_css": "pleeease-compile",
    "release_html": "cp -f index.html dist/ && sed -e 's/bundle.js/bundle.min.js/g' -e 's/dist\\///g' < index.html > dist/index.html",
    "release_js": "NODE_ENV=production browserify index.js -t babelify | uglifyjs -mc drop_console > dist/bundle.min.js",
    "release": "npm run release_css && npm run release_html && npm run release_js",
    "start_css": "pleeease-watch",
    "start_js": "budo index.js:dist/bundle.js -H localhost --live --open --iw -- --debug -t eslintify -t babelify",
    "start": "sh parallelize.sh \"npm run start_css\" \"npm run start_js\"",
    "lint": "browserify index.js -t eslintify -t babelify --colors > /dev/null",
    "test": "jest --verbose"
  }
}

