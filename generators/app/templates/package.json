{
  "name": "<%= appName %>",
  "description": "<%= appDescription %>",
  "private": true,
  "version": "0.0.1",
  "author": {
    "name": "<%= authorName %>",
    "email": "<%= authorEmail %>"
  },
  "dependencies": {
    "react": "^0.14.2",
    "react-dom": "^0.14.2"
  },
  "devDependencies": {
    "babel-eslint": "^4.0.0",
    "babel-preset-enigma": "^6.0.0",
    "babelify": "^7.0.0",
    "browserify": "^12.0.0",
    "budo": "^6.0.0",
    "chai": "^3.4.0",
    "eslint-plugin-react": "^2.5.0",
    "eslintify": "*",
    "karma": "^0.13.0",
    "karma-browserify": "^4.3.0",
    "karma-chai-sinon": "^0.1.5",
    "karma-chrome-launcher": "^0.1.12",
    "karma-mocha": "^0.2.0",
    "karma-mocha-reporter": "^1.1.0",
    "karma-phantomjs2-launcher": "^0.3.2",
    "karma-source-map-support": "^1.1.0",
    "karma-sourcemap-loader": "^0.3.5",
    "lodash": "^3.9.3",
    "mocha": "^2.3.3",
    "pleeease": "^4.0.2",
    "pleeease-cli": "git+https://github.com/yaycmyk/pleeease-cli.git#fix-ignore",
    "sinon": "^1.17.2",
    "sinon-chai": "^2.8.0",
    "uglify-js": "^2.4.23",
    "watchify": "^3.2.3"
  },
  "babel": {
    "presets": [
      "enigma"
    ]
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "scripts": {
    "build_js": "browserify index.js --debug > dist/bundle.js",
    "build_css": "pleeease-compile",
    "build": "npm run build_css && npm run build_js",
    "release_css": "pleeease-compile",
    "release_html": "cp -f index.html dist/ && sed -e 's/bundle.js/bundle.min.js/g' -e 's/dist\\///g' < index.html > dist/index.html",
    "release_js": "NODE_ENV=production browserify index.js | uglifyjs -mc drop_console > dist/bundle.min.js",
    "release": "npm run release_css && npm run release_html && npm run release_js",
    "start_css": "pleeease-watch",
    "start_js": "budo index.js:dist/bundle.js -H localhost --live --open --iw -- --debug -t eslintify",
    "start": "sh parallelize.sh \"npm run start_css\" \"npm run start_js\"",
    "test": "karma start"
  }
}

